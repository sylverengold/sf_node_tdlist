<%- include('header') %>

<script src="js/functions.js"></script>

    <section class="container pt-5" id="todolist">
        <form class="d-flex pb-4">
            <input class="form-control" id="new_tache" type="text" placeholder="Acheter des patates...">
            <button class="btn btn-primary"  Onclick="addTache()">Ajouter!</button>
        </form>
        <main>
            <div class="btn-group mb-4" role="group">
                <button type="button" class=" btn btn-outline-primary active" data-filter="all">Toutes</button>
                <button type="button" class=" btn btn-outline-primary" data-filter="todo">A faire</button>
                <button type="button" class=" btn btn-outline-primary" data-filter="done">Faites</button>
            </div>

<ul class="list-group">
<% for(tache of taches) { %>
            <li class="todo list-group-item d-flex align-items-center">
                <input class="form-check-input" type="checkbox" id="todo-<%= tache.id %>">
                    <label class="ms-2 form-check-label" for="todo-"<%= tache.id %>>
                    <%= tache.label %>
                    </label>
                <label class="ms-auto btn btn-danger btn-sm" Onclick="deleteTache('<%= tache.id %>')">
                <i class="bi-trash">
                </i>
                </label>
            </li>
<% } %>
</ul>

        </main>
    </section>

<%- include('footer') %>